{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@axhxrx/json": [
        "dist/@axhxrx/json/esm/json/mod.d.ts",
        "dist/@axhxrx/json/esm/json/mod.js",
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
